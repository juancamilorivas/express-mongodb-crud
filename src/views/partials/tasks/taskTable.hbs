{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Description</th>
      <th>Operation</th>
    </tr>
  </thead>

  <tbody>

    {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
          {{#if done}}
            <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark btn-sm ">Undone</a>
          {{else}}
            <a href="/tasks/{{_id}}/toggleDone"class="btn btn-success btn-sm">Done</a>
          {{/if}}
          <a href="/tasks/{{_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
          <a href="/tasks/{{_id}}/edit" class="btn btn-info btn-sm">Update</a>
        </td>
      </tr>
    {{/each}}

  </tbody>

</table>

{{else}}
<div class="text-center text-white">
<h1>No tasks</h1>
</div>
{{/if}}